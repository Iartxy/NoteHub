rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Notes folder rules
    match /notes/{userId}/{fileName} {
      // Anyone can read/download files
      allow read: if true;
      
      // Only authenticated users can upload to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

